          }
        }
      },
      "delete": {
        "parameters": [
          {
            "name": "token",
            "in": "header",
            "type": "string",
            "description": "token",
            "required": true
          },
          {
            "name": "id",
            "in": "path",
            "type": "integer",
            "description": "Id do Ativo",
            "required": true
          }
        ],
        "summary": "Excluir ativo",
        "description": "Essa rota apaga um ativo",
        "tags": ["Ativos Financeiros"],
        "responses": {
          "401": {
            "description": "Unauthorized User!"
          },
          "400": {
            "description": "Não existe um ativo com esse Id"
