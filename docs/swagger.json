  "paths": {
    "/auth": {
      "post": {
        "summary": "Logar usuário",
        "description": "Essa rota é responsável por autenticar o usuário",
        "tags": ["Autenticar"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Auth"
              },
              "examples": {
                "auth": {
                  "value": {
                    "cpf": "413.423.614-41",
                    "password": "daniel"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "400": {
            "description": "Invalid username or password"
          },
          "200": {
            "description": "Successfully authenticated user",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "items": {
                    "$ref": "#/components/schemas/Auth"
                  }
                }
              }
            }
          }
        }
      }
    },

    "/register": {
      "post": {
        "summary": "Cadastrar usuário",
        "description": "Essa rota será responsável por realizar o cadastro do usuário",
        "tags": ["Registrar"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Register"
              },
              "examples": {
                "register": {
                  "value": {
                    "name": "Daniel",
                    "email": "daniel@gmail.com",
                    "cpf": "123.123.123.90",
                    "gender": "M",
                    "birth_date": "1990/09/08",
                    "password": "daniel",
                    "phone": "(21)2321-2345",
                    "status": "Ativo",
                    "kind": "client",
                    "address": "Rua abc, 123",
                    "uf": "RJ",
                    "city": "Rio de janeiro",
                    "zip_code": "23454-234",
                    "complement": "casa"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "400": {
            "description": [
              "Este e-mail já está em uso",
              "Este cpf já está em uso"
            ]
          },
          "200": {
            "description": "user registered successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "items": {
                    "$ref": "#/components/schemas/Register"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/financial": {
      "get": {
        "summary": "Listar os ativos",
        "description": "Essa rota lista todos os ativos",
        "tags": ["Ativos Financeiros"],
        "responses": {
          "200": {
            "description": "Ativos listados com sucesso!",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "$ref": "#/components/schemas/List_Assets"
                }
              }
            }
          }
        }
      },
      "post": {
        "parameters": [
          {
            "name": "token",
            "in": "header",
            "type": "string",
            "description": "token",
            "required": true
          }
        ],
        "summary": "Cadastrar ativo",
        "description": "Essa rota cadastra o ativo",
        "tags": ["Ativos Financeiros"],
        "requestBody": {
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "$ref": "#/components/schemas/Register_Assets"
              }
            }
          }
        },
        "responses": {
          "401": {
            "description": "Unauthorized User!"
          },
          "400": {
            "description": "Erro ao cadastrar o ativo"
          },
          "200": {
            "description": "Ativo cadastrado com sucesso!",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "items": {
                    "$ref": "#/components/schemas/Register_Assets"
                  }
                }
              }
            }
          }
        }
      }
    },
